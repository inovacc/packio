# EditorConfig helps maintain consistent coding styles
# More: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = false
max_line_length = 120

# Go files: use tabs
[*.{go,go2}]
indent_style = tab

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
tab_width = 2

# Config and infra files
[*.{conf,hcl,nomad,tf,tfvars}]
indent_size = 2
tab_width = 2

# Protocol Buffers
[*.proto]
indent_size = 2
tab_width = 2

# JSON-like files (Postman, configs, etc.)
[*.{har,jsb2,jsb3,json,jsonc,postman_collection,postman_collection.json,postman_environment,postman_environment.json,babelrc,eslintrc,prettierrc,stylelintrc,ws-context,jest.config}]
indent_size = 2

# Markdown
[*.md]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 200

# YAML
[*.{yml,yaml}]
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 200
